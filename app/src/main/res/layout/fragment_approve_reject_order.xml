<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/approval_back"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:id="@+id/general_liner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:text="Name:"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="17dp"
                                    android:textStyle="normal"></TextView>

                                <TextView
                                    android:id="@+id/approve_reject_username"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1.2"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="normal"></TextView>

                            </TableRow>

                            <TableRow
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:text="Visit Day:"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="17dp"
                                    android:textStyle="normal"></TextView>

                                <TextView
                                    android:id="@+id/approve_reject_visitday"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1.2"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="normal"></TextView>

                            </TableRow>

                            <TableRow
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:text="Retailer:"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="17dp"
                                    android:textStyle="normal"></TextView>

                                <TextView
                                    android:id="@+id/approve_reject_retailer"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1.2"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="normal"></TextView>

                            </TableRow>

                            <TableRow
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:text="Area:"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="17dp"
                                    android:textStyle="normal"></TextView>

                                <TextView
                                    android:id="@+id/approve_reject_area"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1.2"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="normal"></TextView>

                            </TableRow>

                            <TableRow
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:text="Region:"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="17dp"
                                    android:textStyle="normal"></TextView>

                                <TextView
                                    android:id="@+id/approve_reject_region"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1.2"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="14dp"
                                    android:textStyle="normal"></TextView>

                            </TableRow>
                        </TableLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/approve_btn"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/login_button_back"
                                android:text="Approval"
                                android:textColor="@color/white"
                                android:textStyle="bold"></Button>

                            <Button
                                android:id="@+id/reject_btn"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:background="@drawable/login_button_back"
                                android:text="Reject"
                                android:textColor="@color/white"
                                android:textStyle="bold"></Button>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:layout_margin="10dp"
                  app:cardBackgroundColor="@color/white"
                  app:cardCornerRadius="10dp">
               <TableLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TableRow android:layout_marginTop="7dp">
               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.5"
                   android:text="Total Quantity :"
                   android:textStyle="bold"
                   android:textSize="18dp"
                   android:textColor="@color/colorPrimary"
                   android:layout_marginLeft="6dp"></TextView>

          <TextView
              android:id="@+id/tv_total_quantity"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.7"
              android:text=" "
              android:textSize="15dp"
              android:textColor="@color/black"
              android:layout_marginRight="6dp"></TextView>

                   </TableRow>
               </TableLayout>
              </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/order_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/card_view"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"></ListView>

        </LinearLayout>

        </LinearLayout>



</LinearLayout>